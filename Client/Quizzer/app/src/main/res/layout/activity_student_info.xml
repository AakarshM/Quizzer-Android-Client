<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_student_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="aakarsh.quizzer.StudentInfoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/rawTotalPossibleField"
        android:textSize="24sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Join a Session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goToSessionStarterButton"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Student ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="67dp"
        android:id="@+id/textView2"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_below="@+id/rawTotalPossibleField"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idField"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/goToSessionStarterButton"
        android:layout_alignStart="@+id/goToSessionStarterButton" />

    <TextView
        android:text="Classes:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/textView5"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/classField"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/idField"
        android:layout_alignStart="@+id/idField" />

    <Button
        android:text="View Performance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/performanceButton"
        android:background="@color/colorAccent"
        android:textColor="@android:color/background_light"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginBottom="33dp"
        android:layout_above="@+id/goToSessionStarterButton"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
